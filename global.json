{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "dev"
  ],
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(security)"
  ],
  "dependencyDashboard": true,
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "timezone": "Europe/Helsinki",
  "schedule": [
    "after 10pm and before 5am every weekday",
    "every weekend"
  ],
  "packageRules": [
    {
      "matchManagers": ["ansible-galaxy"],
      "groupName": "Ansible roles",
      "labels": [
        "ansible"
      ]
    },
    {
      "managers": ["composer"],
      "labels": [
        "dependencies",
        "php"
      ]
    },
    {
      "matchPackagePrefixes": [
        "uselagoon/"
      ],
      "managers": ["dockerfile", "docker-compose"],
      "groupName": "Lagoon Docker images",
      "labels": [
        "docker",
        "lagoon"
      ],
      "draftPR": true
    },
    {
      "managers": ["github-actions"],
      "labels": [
        "gha"
      ]
    },
    {
      "matchPackageNames": [
        "druidfi/drupal-web",
        "ghcr.io/druidfi/drupal-web"
      ],
      "matchManagers": ["dockerfile", "docker-compose"],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "druidfi/drupal-web",
        "ghcr.io/druidfi/drupal-web"
      ],
      "managers": ["custom.regex"],
      "labels": [
        "php"
      ]
    }
  ],
  "customManagers": [
    {
      "enabled": true,
      "customType": "regex",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        "FROM (?:ghcr\\.io/)?druidfi/drupal-web:(?<currentValue>php-[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "depNameTemplate": "{{{depName}}}",
      "datasourceTemplate": "docker",
      "versioningTemplate": "loose"
    }
  ],
  "ignoreDeps": [
    "php"
  ]
}

{
  "packageRules": [
    {
      "matchLanguages": ["php"],
      "rangeStrategy": "update-lockfile"
    },
    {
      "packageNames": [
        "composer/installers",
        "cweagans/composer-patches",
        "druidi/omen",
        "drush/drush"
      ],
      "groupName": "Drupal Tools",
      "labels": [
        "drupal",
        "tools"
      ]
    },
    {
      "matchPackagePrefixes": [
        "drupal/"
      ],
      "excludePackageNames": [
        "drupal/drupal",
        "drupal/core-dev",
        "drupal/core-dev-pinned",
        "drupal/core-recommended",
        "drupal/core-composer-scaffold"
      ],
      "updateTypes": ["patch", "minor"],
      "groupName": "Drupal modules",
      "addLabels": [
        "drupal",
        "drupal-module"
      ]
    },
    {
      "updateTypes": ["patch", "minor"],
      "packageNames": [
        "drupal/core-dev",
        "drupal/core-dev-pinned",
        "drupal/core-recommended",
        "drupal/core-composer-scaffold"
      ],
      "groupName": "Drupal Core",
      "labels": [
        "drupal",
        "drupal-core"
      ]
    },
    {
      "updateTypes": ["major"],
      "packageNames": [
        "drupal/core-dev",
        "drupal/core-dev-pinned",
        "drupal/core-recommended",
        "drupal/core-composer-scaffold"
      ],
      "groupName": "Drupal Core",
      "labels": [
        "drupal",
        "drupal-core",
        "major"
      ]
    }
  ]
}

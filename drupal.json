{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchLanguages": ["php"],
      "rangeStrategy": "update-lockfile"
    },
    {
      "packageNames": [
        "composer/installers",
        "cweagans/composer-patches",
        "dealerdirect/phpcodesniffer-composer-installer",
        "druidfi/drush-gdpr-dumper",
        "druidfi/omen",
        "drupal/devel",
        "drupal/lagoon_logs",
        "drupal/stage_file_proxy",
        "drush/drush",
        "mglaman/composer-drupal-lenient",
        "oomphinc/composer-installers-extender",
        "wikimedia/composer-merge-plugin"
      ],
      "groupName": "Drupal Tools",
      "rangeStrategy": "bump",
      "labels": [
        "drupal",
        "tools"
      ]
    },
    {
      "matchPackagePrefixes": [
        "drupal/"
      ],
      "allowedVersions": "/^[0-9]+\\.[0-9]+\\.[0-9]+(\\.[0-9]+)?$/",
      "prBodyColumns": ["Package", "Change", "Compare"]
    },
    {
      "matchPackagePrefixes": [
        "drupal-ckeditor-libraries-group/",
        "npm-asset/"
      ],
      "groupName": "Drupal libraries & plugins",
      "labels": [
        "drupal",
        "drupal-library"
      ],
      "draftPR": true
    },
    {
      "matchPackagePrefixes": [
        "drupal/"
      ],
      "excludePackageNames": [
        "drupal/drupal",
        "drupal/core-dev",
        "drupal/core-dev-pinned",
        "drupal/core-recommended",
        "drupal/core-composer-scaffold"
      ],
      "updateTypes": ["patch", "minor"],
      "groupName": "Drupal modules",
      "labels": [
        "drupal",
        "drupal-module"
      ],
      "draftPR": true
    },
    {
      "updateTypes": ["patch", "minor"],
      "packageNames": [
        "drupal/core-dev",
        "drupal/core-dev-pinned",
        "drupal/core-recommended",
        "drupal/core-composer-scaffold"
      ],
      "groupName": "Drupal Core",
      "labels": [
        "drupal",
        "drupal-core"
      ]
    },
    {
      "updateTypes": ["major"],
      "packageNames": [
        "drupal/core-dev",
        "drupal/core-dev-pinned",
        "drupal/core-recommended",
        "drupal/core-composer-scaffold"
      ],
      "groupName": "Drupal Core",
      "labels": [
        "drupal",
        "drupal-core"
      ],
      "draftPR": true
    },
    {
      "packageNames": [
        "drupal/gin",
        "drupal/gin_login",
        "drupal/gin_toolbar"
      ],
      "groupName": "Gin",
      "labels": [
        "drupal"
      ],
      "draftPR": true
    }
  ],
  "prBodyDefinitions": {
    "Compare": "[Compare](https://git.drupalcode.org/project/{{replace '.git' '' sourceRepoName}}/-/compare/{{currentVersion}}...{{newVersion}})"
  }
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "allowPlugins": true,
  "packageRules": [
    {
      "updateTypes": ["patch", "minor"],
      "matchPackagePrefixes": [
        "doctrine/",
        "symfony/"
      ],
      "groupName": "Symfony",
      "labels": [
        "symfony"
      ],
      "draftPR": true
    },
    {
      "updateTypes": ["major"],
      "matchPackagePrefixes": [
        "doctrine/",
        "symfony/"
      ],
      "groupName": "Symfony",
      "labels": [
        "symfony"
      ],
      "draftPR": true,
      "dependencyDashboardApproval": true
    }
  ]
}

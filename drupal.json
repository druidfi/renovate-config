{
  "packageRules": [
    {
      "updateTypes": ["patch", "minor"],
      "packageNames": [
        "drupal/core-dev-pinned",
        "drupal/core-recommended",
        "drupal/core-composer-scaffold"
      ],
      "groupName": "Drupal Core",
      "labels": [
        "drupal",
        "drupal-core"
      ]
    },
    {
      "updateTypes": ["major"],
      "packageNames": [
        "drupal/core-dev-pinned",
        "drupal/core-recommended",
        "drupal/core-composer-scaffold"
      ],
      "groupName": "Drupal Core",
      "labels": [
        "drupal",
        "drupal-core",
        "major"
      ]
    },
    {
      "packageNames": [
        "drush/drush"
      ],
      "labels": [
        "drupal",
        "drush",
        "tools"
      ]
    },
    {
      "matchPackagePrefixes": [
        "drupal/"
      ],
      "rangeStrategy": "bump",
      "groupName": "Drupal modules",
      "addLabels": [
        "drupal",
        "drupal-module"
      ]
    }
  ]
}
